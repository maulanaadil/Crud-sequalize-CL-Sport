<%- include('../includes/header'); %>

<div class="container">
  <h2>Edit</h2>

  <form action="/players/edit" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        value="<%= playerById.name %>"
        class="form-control"
        id="name"
        name="name"
      />
    </div>
    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <input
        type="number"
        value="<%= playerById.age %>"
        class="form-control"
        id="age"
        name="age"
      />
    </div>

    <div class="mb-3">
      <label for="club" class="form-label">Club</label>
      <select
        class="form-select"
        aria-label="Default select example"
        id="club"
        name="club"
      >
        <% clubs.forEach( (club) => { %>
        <option value="<%= club.id %>" <%= club.id === playerById.Club.id ? 'selected' : '' %>><%= club.name %></option>
        <% }); %>
      </select>
    </div>

    <input type="text" name="id" value="<%= playerById.id %>" hidden />
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-danger">Reset</button>
  </form>
</div>

<%- include('../includes/footer'); %>
